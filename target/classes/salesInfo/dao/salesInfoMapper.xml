<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="salesInfoSQL">

<!-- STATE_OF_SALES : 기간별 매출 정보 호출하기 -->
<select id="getSalesInfoList" resultType="salesInfo">
	select * from SALES_INFO
</select>
<!-- STATE_OF_SALES : 시퀀스 넘버 받아오기 -->
<select id="getSalesSeq" resultType="Integer">
	select sales_seq.nextVal from dual
</select>
<insert id="uploadSalesInfo" parameterType="salesInfo">
	insert into SALES_INFO values(#{sales_seq},
								  #{order_no},
								  #{order_id},
								  #{sales_revenue},
								  #{sales_payment_json},
								  SYSDATE)
</insert>

</mapper>















